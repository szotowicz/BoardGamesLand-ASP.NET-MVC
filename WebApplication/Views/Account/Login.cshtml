@using WebApplication.Models;
@model UserAccount

@{
    ViewBag.Title = "Zaloguj się";
}

<div class="container" align="center">
    <div style="width: 280px;">
        <br /><br />
        <img src="https://developers.google.com/experts/img/user/user-default.png" class="img-circle" style="width: 150px" alt="User icon">
        <br /><br />
        <div class="text-danger">@ViewBag.AdditionalCommunicat</div>
        @{
            using (@Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Login, new { placeholder = "Email lub nick", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Hasło", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                </div>
                <br />
                <div class="text-right">
                    <a href="#">Nie pamiętam hasła</a>
                </div>
                <br />
                <input type="submit" class="btn btn-success btn-group-justified" value="Zaloguj">
                <br />
                @:Nie masz jeszcze konta?
                <a href="@Url.Action("Registration", "Account")">Załóż konto</a>
            }
        }
    </div>
</div>