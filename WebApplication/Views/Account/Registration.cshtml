@using WebApplication.Models;
@model UserAccount

@{
    ViewBag.Title = "Rejestracja";
}

<h2>Rejestracja</h2>

<div class="text-danger">@ViewBag.AdditionalCommunicat</div>
<br /><br />
        @{
            using (@Html.BeginForm("Registration", "Account", FormMethod.Post))
            {
                <div align="center">
                    <div class="text-center" style="width: 500px;">
                        <div class="col-md-6" style="float: left">
                            @Html.LabelFor(model => model.Email)
                            <br />
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Adres e-mail", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6" style="float: right">
                            @Html.LabelFor(model => model.Password)
                            <br />
                            @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Hasło", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div align="center">
                    <br /><br /><br /><br />
                    <div class="text-left" style="width: 700px;">
                        <hr />
                        <div class="text-center">
                            Uzupełnij informacje o koncie
                        </div>
                        <br /><br />

                        <div style="float: left">
                            <div class="form-group" style="width: 300px">
                                @Html.LabelFor(model => model.Login)
                                <br />
                                @Html.TextBoxFor(model => model.Login, new { placeholder = "Nick", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name)
                                <br />
                                @Html.TextBoxFor(model => model.Name, new { placeholder = "Imię", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Surname)
                                <br />
                                @Html.TextBoxFor(model => model.Surname, new { placeholder = "Nazwisko", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div style="float: right; width: 250px">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Sex)
                                <br />
                                @Html.RadioButtonFor(model => model.Sex, "Male") Mężczyzna
                                <br />
                                @Html.RadioButtonFor(model => model.Sex, "Female", new { @checked = "checked" }) Kobieta
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Birthday)
                                <br />
                                @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            @Html.CheckBoxFor(model => model.RegulationsAreAccepted) Akceptuję @Html.ActionLink("Regulamin", "Regulations", "Account")
                            <br />
                            @Html.ValidationMessageFor(model => model.RegulationsAreAccepted, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                </div>
                
                <div style="width: 100%; margin: 270px auto 50px auto" align="center">
                    <input type="submit" class="btn btn-success btn-group-justified" value="Stwórz konto">
                </div>
            }
        }