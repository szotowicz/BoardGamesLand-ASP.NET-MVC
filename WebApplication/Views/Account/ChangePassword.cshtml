@using WebApplication.Models;
@model ChangePassword
@{
    ViewBag.Title = "Zmień hasło";
}

<div style="width: 90%; margin: 50px auto;" align="center">
    <h2>Zmień hasło</h2>

    <div class="text-danger">@ViewBag.AdditionalCommunicat</div>
    <br />
    @{
        using (@Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(model => model.CurrentPassword, new { type = "password", placeholder = "Aktualne hasło", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.NewPassword, new { type = "password", placeholder = "Nowe hasło", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.NewPasswordCopy, new { type = "password", placeholder = "Powtórz nowe hasło", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPasswordCopy, "", new { @class = "text-danger" })
            </div>

            <br />
            <input type="submit" class="btn btn-success btn-group-justified" value="Zmień hasło">
            <br />
        }
    }
</div>